    <script type="text/javascript">

        var data = JSON.parse(document.getElementById('data').value);
        var total = parseInt(document.getElementById('total').value);
        var counter=0;
        var strength = data.length;
        var sum=0;var avg;
        // console.log(data);
        for(var i=0;i<data.length;++i){
            if(data[i].attended/total>0.75)
                counter++;
            sum += data[i].attended;
        }

        var perc1 = ((counter/strength)*100).toPrecision(4) + '%';
        var perc2 = (((strength-counter)/strength)*100).toPrecision(4) + '%';
        console.log(perc2);
        Chartist.Pie('#chartPreferences', {
          labels: [perc1, perc2],
          series: [counter, strength-counter]
        });


        avg = ((sum/(total*data.length))*100).toPrecision(4);
        document.getElementById('avgPerc').innerText = avg + '%';
    </script>
